<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <%= form_for "", url: {:controller => 'main', :action => 'find' }, method: 'post', class: 'form-horizontal center' do |f|  %>
        <div class="input-group">
          <%= f.text_field :search_file, :placeholder => "Search File", :class => "form-control input-lg naana-search-file-field" %>
          <span class="input-group-btn">
            <%= f.submit "Go", :class => "btn btn-primary btn-lg" %>
          </span>
        </div>
      <% end %>
    </div>

    <div class="hidden-sm col-md-3 pull-right">
      <img src="/assets/images/assistant.png" class="img-responsive assistant">
    </div>
  </div>
</div>
